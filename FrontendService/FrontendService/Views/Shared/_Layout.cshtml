<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Friends Book</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FrontendService.styles.css" asp-append-version="true" />
    <style>
        .navbar-custom {
            background-color: #f8f9fa;
            border-right: 1px solid #ddd;
            position: fixed;
            top: 0;
            bottom: 0;
            width: 130px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .content-wrapper {
            padding: 20px;
            overflow-y: auto;
            height: calc(100vh - 60px);
        }

        .footer-custom {
            background-color: #343a40;
            color: white;
            position: fixed;
            bottom: 0;
            left: 130px;
            width: calc(100% - 130px);
            height: 60px;
            line-height: 60px;
            z-index: 1000;
            text-align: center;
        }

        .logout-button {
            margin-top: auto;
            padding-top: 20px;
        }
    </style>
</head>
<body>
    <div class="page-wrapper">
        <!-- Left Sidebar Menu -->
        <nav class="navbar navbar-light navbar-custom flex-column align-items-start p-3">
            <div>
                <div class="menu-buttons">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Post" asp-action="Index">
                        <img src="~/home.png" alt="home icon" width="40" height="40" /> Post
                    </a>
                </div>
                <div class="menu-buttons">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Profile" asp-action="Index">
                        <img src="~/user.png" alt="user icon" width="40" height="40" /> Profile
                    </a>
                </div>
            </div>
            <div class="menu-buttons logout-button">
                <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Logout">
                    <img src="~/switch.png" alt="logout icon" width="40" height="40" /> Logout
                </a>
            </div>
        </nav>

        <!-- Main Content -->
        <div class="container-fluid p-3 content-wrapper">
            <div class="container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>

        <!-- Footer -->
        <footer class="footer-custom text-muted">
            <div class="container">
                &copy; 2024 - FriendsBook
            </div>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
